    <core:FragmentDefinition
    	xmlns="sap.m"
    	xmlns:l="sap.ui.layout"
    	xmlns:f="sap.ui.layout.form"
    	xmlns:core="sap.ui.core">
    	<VBox class="sapUiSmallMargin">
    		<f:SimpleForm id="TAttFill"
    			editable="false"
    			layout="ResponsiveGridLayout"
    			title="TAttFill"
    			labelSpanXL="3"
    			labelSpanL="3"
    			labelSpanM="3"
    			labelSpanS="12"
    			adjustLabelSpan="false"
    			emptySpanXL="4"
    			emptySpanL="4"
    			emptySpanM="4"
    			emptySpanS="0"
    			columnsXL="1"
    			columnsL="1"
    			columnsM="1"
    			singleContainerFullSize="false" >
    			<f:content>
    				<Label text="Style" />
    				<Text text="{fLineStyle}" />
    				<Label text="Color" />
    				<Text text="{fLineColor}" />
    			</f:content>
    		</f:SimpleForm>
    	</VBox>
    </core:FragmentDefinition>