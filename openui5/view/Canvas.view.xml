<mvc:View
    	height="100%"
    	controllerName="sap.ui.jsroot.controller.Canvas"
    	xmlns:mvc="sap.ui.core.mvc"
    	xmlns:l="sap.ui.layout"
    	xmlns="sap.m">
   	<Page title="" showNavButton="false" showFooter="false" >
    		<headerContent>
	         <OverflowToolbar id="otb1">
	             <Button text="File" type="Transparent"></Button>
 	             <Button text="Edit" type="Transparent"></Button>
	             <Button text="View" type="Transparent"></Button>
	             <Button text="Options" type="Transparent"></Button>
	             <Button text="Tools" type="Transparent"></Button>
	             <ToolbarSpacer />
	             <Button text="Help" type="Transparent"></Button>
	         </OverflowToolbar>
    		</headerContent>
    		<subHeader>
    		</subHeader>
    		<content>
    		  <!-- l:HorizontalLayout -->
			     <mvc:XMLView id="jsroot_canvas" viewName="sap.ui.jsroot.view.Panel"/>
    		  <!-- /l:HorizontalLayout -->
    		</content>
    		<footer>
    		   <Label text="Label A (required)" labelFor="otb2"/>
    			<Toolbar id="otb2">
    				<ToolbarSpacer/>
    				<Button text="Accept" type="Accept" />
    				<Button text="Reject" type="Reject" />
    				<Button text="Edit" />
    				<Button text="Delete" />
    			</Toolbar>
    		</footer>
    	</Page>
</mvc:View>

