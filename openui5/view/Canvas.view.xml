    			<Toolbar>
    				<SearchField />
    			</Toolbar>
    			<Button icon="sap-icon://action" tooltip="Share" />
    		</headerContent>
    		<subHeader>
    		</subHeader>
    		<content>
			   <mvc:XMLView viewName="sap.ui.jsroot.view.Panel"/>
    		</content>
    		<footer>
    			<Toolbar>
    				<ToolbarSpacer/>
    				<Button text="Accept" type="Accept" />
